<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/back"
    tools:context="uni.ek.com.re_think.Activity3">


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000"
        android:layout_marginTop="79dp"
        android:layout_below="@+id/tv_buy"
        android:layout_centerHorizontal="true"
        android:id="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:id="@+id/tv_buy"
        android:layout_marginLeft="20dp"
        android:textSize="26sp"
        android:layout_marginTop="55dp"
        android:layout_alignParentTop="true"
        />



    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textSize="14sp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_corners"
        android:id="@+id/tv_1"
        android:padding="16dp"
        android:textColor="#FFF"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/person"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/tv_1"
         />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_marginLeft="5dp"
        android:src="@drawable/person"
        android:layout_alignBottom="@+id/tv_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textSize="14sp"
        android:background="@drawable/rounded_corners"
        android:id="@+id/tv_2"
        android:padding="16dp"
        android:textColor="#FFF"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/tv_1"
        android:layout_alignLeft="@+id/tv_1"
        android:layout_alignStart="@+id/tv_1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_marginLeft="5dp"
        android:src="@drawable/person"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textSize="14sp"
        android:background="@drawable/rounded_corners"
        android:id="@+id/tv_3"
        android:layout_marginRight="10dp"
        android:padding="16dp"
        android:textColor="#FFF"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tv_nofound"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
