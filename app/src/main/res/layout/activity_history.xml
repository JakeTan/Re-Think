<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context="uni.ek.com.re_think.History">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000"
        android:layout_marginTop="182dp"
        android:id="@+id/view_history"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You've use  "
        android:id="@+id/textView2"
        android:textColor="#000"
        android:textSize="22sp"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="reThink"
        android:id="@+id/textView3"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:background="@color/red"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="3 times"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_times"
        android:textSize="22sp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textSize="14sp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_corners"
        android:id="@+id/tv_history1"
        android:padding="16dp"
        android:textColor="#FFF"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/im_1"
        android:src="@drawable/person"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/tv_history1"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/im_2"
        android:layout_marginLeft="5dp"
        android:src="@drawable/person"
        android:layout_alignBottom="@+id/tv_history2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textSize="14sp"
        android:background="@drawable/rounded_corners"
        android:id="@+id/tv_history2"
        android:padding="16dp"
        android:textColor="#FFF"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/tv_history1"
        android:layout_alignLeft="@+id/tv_history1"
        android:layout_alignStart="@+id/tv_history1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/im_3"
        android:layout_marginLeft="5dp"
        android:src="@drawable/person"
        android:layout_below="@+id/im_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textSize="14sp"
        android:background="@drawable/rounded_corners"
        android:id="@+id/tv_history3"
        android:layout_marginRight="10dp"
        android:padding="16dp"
        android:textColor="#FFF"
        android:layout_alignBottom="@+id/im_3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tv_nohistory"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_above="@+id/im_2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
